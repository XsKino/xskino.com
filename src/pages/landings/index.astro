---
import Layout from '@layouts/Layout.astro'
import Hero from '@components/landings/Hero.astro'
import Benefits from '@components/landings/Benefits.astro'
import Calculator from '@components/landings/Calculator.jsx'
import Nots from '@components/landings/Nots.astro'
---

<Layout
  title='Obtén una landing page'
  description='descubre cómo una landing page puede ayudarte a impulsar tus ventas'
  lang='es'>
  <main>
    <Hero />
    <Benefits />
    <Nots />
    <Calculator client:only='react' />

    <section class='py-20 bg-background text-foreground'>
      <div class='container mx-auto px-4 flex flex-col gap-4 items-end'>
        <h3 class='text-lg text-end'>{new Date().getFullYear()}</h3>
        <p class='text-sm text-end max-w-[40ch]'>andresprza@gmail.com</p>
      </div>
    </section>
  </main>
</Layout>
